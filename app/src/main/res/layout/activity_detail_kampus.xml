<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.appified.jsonparsingexample.detail_kampus">

    <TextView
        android:layout_below="@+id/spin_link"
        android:id="@+id/tamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="16dp"
        android:text="Title"
        android:textSize="20sp"
        android:textStyle="bold" />
    <TextView
        android:layout_below="@+id/tamp"
        android:id="@+id/detail_id_kampus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="16dp"
        android:text="Title"
        android:textSize="20sp"
        android:textStyle="bold" />
    <ListView
        android:layout_below="@+id/detail_id_kampus"
        android:id="@+id/list_jurusan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>

</RelativeLayout>
